/* pages/detail/detail.wxss */

/* 页面容器 */
.container {
  padding-bottom: 120rpx; /* 为底部操作栏留出空间 */
}

/* 图书封面 */
.book-cover {
  width: 100%;
  height: 500rpx;
  background: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.book-cover image {
  width: 100%;
  height: 100%;
}

/* 图书信息 */
.book-info {
  padding: 30rpx;
}

.book-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.book-author {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.book-price {
  font-size: 32rpx;
  color: #e64340;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.book-desc {
  margin-top: 40rpx;
}

.desc-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.desc-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
  box-sizing: border-box;
}

.back-btn, .cart-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
}

.back-btn {
  background: #f5f5f5;
  color: #333;
}

.cart-btn {
  background: #e64340;
  color: #fff;
}