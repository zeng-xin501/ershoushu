/* pages/sale/sale.wxss */

page {
  background-color: #f5f5f5;
  padding-bottom: 130rpx;
}

.scrollarea{
  flex: 1;
  overflow-y:hidden;
}

.inputtext{
  width: 100%;
  height:50rpx;
  border: solid;
  border-radius: 20px;
  border-color: rgb(215, 238, 197);
  margin: 10px;
  font-size: 12px;
}

.bnt{
  width:20%;
  height: 60rpx;
  border-radius: 10px;
  font-size: 12px;
  background-color: rgb(197, 223, 176);
  margin: 10px;
  background-color: rgb(197, 223, 176);
  text-align: center;
}

.banner{
  width: 100%;
  height: 300rpx;
}

.content-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 220rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  padding: 30rpx 0;
  color: #333;
}

.recycle-btn {
  width: 80%;
  margin: 30rpx auto 20rpx;
  background-color: #4CAF50;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 10rpx;
}

.recycle-btn:active {
  opacity: 0.8;
}

.submitted-btn {
  width: 80%;
  margin: 0 auto;
  background-color: #2196F3;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 10rpx;
}

.submitted-btn:active {
  opacity: 0.8;
}

.tips {
  margin-top: 30rpx;
  padding: 0 40rpx;
  text-align: center;
}

.tip-item {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 10rpx;
}

.nav-container{
  display: flex;
  flex-wrap: wrap;
  padding: 0rpx 0;
  background:#fff;
  margin-bottom: -40rpx;
}

.nav-item{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin:5rpx 0;
  transition: all 0.3s ease;
  border-radius: 16rpx;
  padding: 8rpx 0;
  position: relative;
}

.content-list{
  height:370px;
}

.content-item{
  display: flex;
  padding: 20rpx;
  margin: 15rpx;
  background: rgb(212, 231, 191);
  border-radius: 10rpx;
}

.item-cover{
  width:200rpx;
  height:200rpx;
  border-radius: 20rpx;
}

.item-info{
  flex: 1;
  margin-left: 20rpx;
}

.item-title{
  font-size: 32rpx;
  color: #333;
}

.item-desc{
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow:hidden;
}