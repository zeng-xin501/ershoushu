/* pages/cart/cart.wxss */
.container{
	position:relative;
	height: 100vh;
	padding-bottom: 0rpx;
}

.content-list{
  height:800px;
}

.checkout-bar{
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	height: 100rpx;
	background: #fff;
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 0 20rpx;
	box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
}

.total-price{
	font-size: 32rpx;
	color: #e64340;
	font-weight: bold;
}

.checkout-btn{
	background: #e64340;
	color: #fff;
	border-radius: 50rpx;
	height: 80rpx;
	line-height: 80rpx;
	padding: 0 40rpx;
	font-size: 28rpx;
	margin: 0;
}

.content-item{
  display: flex;
  padding: 20rpx;
  margin: 15rpx;
  background: rgb(212, 231, 191);
  border-radius: 10rpx;
}

.item-cover{
  width:200rpx;
  height:200rpx;
  border-radius: 20rpx;
}

.item-info{
  flex: 1;
  margin-left: 20rpx;
}

.item-title{
  font-size: 32rpx;
  color: #333;
}

.item-desc{
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow:hidden;
}