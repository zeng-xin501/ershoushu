/* pages/hadrycl/hadrycl.wxss */
.container {
  padding: 20rpx;
}

.header {
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #eee;
  margin-bottom: 30rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
  margin-left: 60rpx;
  margin-right: 60rpx;
}


.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.book-list {
  padding-bottom: 40rpx;
}

.book-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.book-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1px solid #f0f0f0;
  margin-bottom: 16rpx;
}

.book-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.book-category {
  font-size: 24rpx;
  color: #fff;
  background-color: #4CAF50;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.book-info {
  margin-bottom: 16rpx;
}

.info-row {
  display: flex;
  margin-bottom: 10rpx;
}

.info-label {
  width: 160rpx;
  color: #666;
  font-size: 28rpx;
}

.info-value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
}

.book-image {
  margin-top: 16rpx;
  text-align: center;
}

.book-image image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 8rpx;
}