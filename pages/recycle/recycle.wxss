.container {
  padding: 20rpx;
}
.form-item {
  margin-bottom: 30rpx;
}
input, textarea {
  border: 1rpx solid #ccc;
  padding: 10rpx;
  width: 100%;
}
textarea {
  height: 150rpx;
  margin-top: 10rpx;
}
.button-group {
  display: flex;
  justify-content: space-between;
  width: 80%;
  margin: 40rpx auto;
}

.back-btn {
  width: 48%;
  background-color: #f5f5f5;
  color: #333;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 10rpx;
  margin-top: 0;
}

.back-btn:active {
  opacity: 0.8;
}

.submit-btn {
  width: 48%;
  background-color: #4CAF50;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 10rpx;
  margin-top: 0;
}

.submit-btn:active {
  opacity: 0.8;
}

/* 保留原有button样式作为备用 */
button {
  margin-top: 20rpx;
}

.rating-container {
  margin-top: 10rpx;
}

.rating-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

slider {
  margin: 0;
}

.category-container {
  margin-top: 10rpx;
}

.picker {
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}
image {
  width: 200rpx;
  height: 200rpx;
  margin-top: 10rpx;
}