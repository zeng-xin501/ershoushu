page {
  height: 100vh;
  display: flex;
  flex-direction: column;
 
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.taskclass{
  display: flex;
  flex-direction: row;
  margin-top: 30px;
}

.inputtext{
  width: 100%;
  height:50rpx;
  border: solid;
  border-radius: 20px;
  border-color: rgb(215, 238, 197);
  margin: 10px;
  font-size: 12px;
}

.bnt{
  width:50rpx;
  height: 80rpx;
  border-radius: 10px;
  margin-left: 670rpx ;
  font-size: 12px;
  background-color: rgb(197, 223, 176);
  margin: 10px;
  background-color: rgb(197, 223, 176);
  text-align: center;
}

.banner{
  width: 100%;
  height: 400rpx;
}

.banner image{
  width: 100%;
  height: 100%;
}

.setting-item{
  flex:none;
  overflow-x: hidden;
  margin-left: 670rpx;
  overflow-y: hidden;  
}
.setting{
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: column;
    align-items: left;
    margin-left: 0px;
    transition: all 0.3s ease;
    border-radius: 50rpx;
   
    position: relative;
}
.nav-container{
  width:100%;
  display: flex;
  flex-wrap: wrap;
  padding: 0rpx 0;
  background:rgb(156, 182, 85);
  margin-bottom: -40rpx;
  margin-top: 40rpx;
}

.nav-item{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin:5rpx 0;
  transition: all 0.3s ease;
  border-radius: 50rpx;
  padding: 20rpx 0;
  position: relative;
}

.deal{
  width:100%;
  display: flex;
  flex-wrap: wrap;
  padding: 0rpx 0;
  background:rgb(201, 231, 167);
  border: solid;
  border-color: rgb(201, 231, 167);
  border-radius: 40rpx;
  margin-top: 60rpx;
  margin-bottom: -40rpx;
}

.content-list{
  height:370px;
}

.content-item{
  display: flex;
  padding: 20rpx;
  margin: 15rpx;
  background-color:azure;
  background: rgb(113, 133, 91);
  border-radius: 10rpx;
}
.item-cover{
  width:100rpx;
  height:100rpx;
  border-radius: 20rpx;
}
.per{
  display: flex;
  flex-direction: row;

}
.per-show{
  width:25%;
  display: flex;
  flex-wrap: wrap;
  padding: 0rpx 0;
    display: flex;
  padding: 20rpx;
  margin-left: 40rpx;
  margin-right: 20rpx;
  overflow-x: hidden;
  overflow-y: hidden; 
  border:solid;
  border-color: gray;
  border-radius: 200rpx;
}
.per-item{
 
  width:200%;
  height:200rpx;
  border-radius: 200rpx;
}
.per-info{
  margin-top: 50rpx;
  margin-left: 10rpx;
  width:60%;
  display: flex;
  flex-direction: column;
}
.buy{
  width:45%;
  display: flex;
  flex-direction: column;
  align-items: left;
  text-indent: 30rpx;
  margin-top:  20rpx;
  margin-left: 20rpx;
  background-color:azure;
  transition: all 0.3s ease;
  border:solid;
  border-color: rgb(148, 119, 172);
  border-radius: 50rpx;
  padding: 20rpx 0;
  margin-bottom: 10rpx;
  position: relative;
}
.sell{
  width:45%;
  display: flex;
  flex-direction: column;
  align-items: left;
  text-indent: 30rpx;
  margin-top:  20rpx;
  margin-left: 10rpx;
  transition: all 0.3s ease;
  background-color: azure;
  border:solid;
  border-color: rgb(148, 119, 172);
  border-radius: 50rpx;
  padding: 20rpx 0;
  margin-bottom: 10rpx;
  position: relative;
}


.item-info{
  flex: 1;
  margin-left: 20rpx;
}

.item-title{
  font-size: 32rpx;
  color: #333;
}

.item-desc{
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow:hidden;
}