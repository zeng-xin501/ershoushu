/* 添加一些基本样式 */
.container {
	padding: 20rpx;
	width: 100%;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  margin-left: 10rpx;
  font-size: 28rpx;
}

.search-clear {
  margin-left: 10rpx;
}

.tabs {
  display: flex;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.tab-item.active {
  color: #07c160;
  border-bottom: 4rpx solid #07c160;
}

.order-list {
  margin-top: 20rpx;
}

.order-item {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.status {
  color: #07c160;
}

.order-content {
  display: flex;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.book-info {
  flex: 1;
}

.book-name {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.book-price {
  color: #e64340;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.book-condition {
  font-size: 24rpx;
  color: #999;
}

.order-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.confirm-btn {
  background: #07c160;
  color: #fff;
  font-size: 26rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
}

.completed-text {
  color: #999;
  font-size: 26rpx;
}

.loading, .empty-state {
  text-align: center;
  padding: 40rpx;
  color: #999;
}
.order-item {
  margin: 15px;
  padding: 15px;
  border-radius: 8px;
  background: #fff;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.goods-image {
  width: 80px;
  height: 100px;
  margin-right: 15px;
}

.book-info {
  flex: 1;
}

.book-name {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}

.book-price {
  color: #e64340;
  font-size: 15px;
  margin-bottom: 5px;
}

.book-condition {
  color: #888;
  font-size: 14px;
}