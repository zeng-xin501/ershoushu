page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 20rpx; 
}

/* 主选项容器（"我的地址"和"账号管理"） */
.option-container {
  flex: 1; /* 占据剩余空间 */
  display: flex;
  flex-direction: column;
  gap: 20rpx; /* 选项间距 */
}

/* 单个选项样式 */
.option-item {
  padding: 30rpx;
  background: rgb(212, 231, 191);
  border-radius: 10rpx;
  margin: 0 15rpx; /* 左右外边距 */
}

/* 底部固定按钮 */
.bottom-button {
  position: fixed;
  bottom: 30rpx;
  left: 15rpx;
  right: 15rpx;
  padding: 30rpx;
  background: rgb(212, 231, 191);
  border-radius: 10rpx;
  text-align: center;
}