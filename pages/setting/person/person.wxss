/* pages/setting/setting.wxss */
page{
	height: 100vh;
	display: flex;
	flex-direction: column;
}
.container {    
padding: 0;
background-color: fff;
min-height: 100vh;
}
.box{
	display: flex;
	flex-wrap: wrap;
	padding: 0rpx 0;
	display: flex;
	padding: 20rpx;
	margin: 15rpx;
	background: rgb(212, 231, 191);
	border-radius: 10rpx; 
}
.touxiang{
	width:100%;
	height: 200rpx;
	display: flex;
	flex-wrap: wrap;
	padding: 0rpx 0;
	display: flex;
	padding: 20rpx;
	margin-top: 30rpx;
	margin-bottom: 30rpx;
	margin-left: 210rpx;
	margin-right: 210rpx;
	overflow-x: hidden;
	overflow-y: hidden; 
	border:solid;
	border-color: gray;
	border-radius: 200rpx;
}
.photo{
	width:100%;
	display: flex;
	flex-wrap: wrap;
	padding: 20rpx;
	margin-left:10rpx ;
	overflow-x: hidden;
	overflow-y: hidden; 
	border:solid;
	border-color: gray;
	border-radius: 200rpx;
}
.per-item{
width:100%;
height:200rpx;
border-radius: 200rpx;
}
.text-item{
	width:100%;
	height: 80rpx;
	flex-direction: column;
	padding-top:30rpx;
	padding-left: 30rpx;
}
.bottom-button {
	position: fixed;
bottom: 30rpx;
left: 15rpx;
right: 15rpx;
padding: 30rpx;
background: rgb(212, 231, 191);
border-radius: 10rpx;
text-align: center;
position: fixed;

}
.image {
width: 200rpx;
height: 200rpx;
margin-top: 10rpx;
}
.option-item {
	width: 100%;
background: transparent;
color: #333; /* 文字颜色可根据需要调整 */
font-size: 32rpx;
padding: 0;
margin: 0;
line-height: 1.5;
}
.profile-list {
width: 100%;
margin-top: 20rpx;
}

.profile-item {
display: flex;
justify-content: space-between;
align-items: center;
padding: 30rpx;
border-bottom: 1rpx solid #eee;
}

.profile-item:last-child {
border-bottom: none;
}

.item-label {
font-size: 28rpx;
color: #333;
font-weight: 500;
width: 140rpx;
}

.picker-content {
flex: 1;
display: flex;
justify-content: flex-end;
align-items: center;
}

.picker-content text {
font-size: 28rpx;
color: #666;
margin-right: 10rpx;
}
.arrow-right {
width: 32rpx;
height: 32rpx;
opacity: 0.3;
}